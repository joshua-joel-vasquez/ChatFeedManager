# =========================
# Private runtime settings
# =========================
# Copy this file to: .env
#
# IMPORTANT:
#   - .env is ignored by git (do NOT commit it)
#   - Put ALL secrets + machine-specific paths here

# -------- SocialStream.Ninja (SSN) --------
# Your SSN session ID (from your dock.html URL ?session=XXXX)
SSN_SESSION=PUT_YOUR_SSN_SESSION_HERE

# Unified feed output path written by SSNChatWriter
CHAT_FEED_PATH=Overlays/UnifiedChat/chat_feed.json

# Overlay output files (written by ChatManager emitter/router)
OVERLAY_CHAT_FILE=Overlays/UnifiedChat/overlay_additions.jsonl
OVERLAY_EVENTS_FILE=Overlays/UnifiedChat/overlay_events.jsonl
OVERLAY_USER_STATE_FILE=Overlays/UnifiedChat/user_state.json

# SSNChatWriter behavior (optional)
MAX_MESSAGES=200
ACTIVE_WINDOW_SECONDS=300
RECONNECT_BASE_SECONDS=2
RECONNECT_MAX_SECONDS=20
LOG_EVERY_MESSAGE=true

# -------- Spotify API (Spotipy) --------
SPOTIPY_CLIENT_ID=
SPOTIPY_CLIENT_SECRET=
SPOTIPY_REDIRECT_URI=http://127.0.0.1:8888/callback
